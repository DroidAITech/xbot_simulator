<launch>
  <arg name="gui"        default="true"/>
  <arg name="robot" default="xbot-u"/>
  <arg name="debug" default="false"/>
  <arg name="headless" default="false"/>
  <arg name="world_file" default="$(env XBOT_GAZEBO_WORLD_FILE)"/>


  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="$(arg gui)" />
    <arg name="world_name" value="$(arg world_file)"/>
    <arg name="paused" value="false"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" ns="/xbot" respawn="false" output="screen">
  <param name="publish_frequency" value="20.0"/>
</node>

  <!-- load a robot -->
  <include file="$(find xbot_gazebo)/launch/includes/$(arg robot).launch.xml"/>

</launch>
